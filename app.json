{
  "expo": {
    "name": "SWUBot",
    "slug": "swubot",
    "version": "42.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "swubot",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],

    "ios": {
      "bundleIdentifier": "com.standwithus.swubot",
      "supportsTablet": true,
      "buildNumber": "43",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera is used only for user-uploaded content or QR scanning.",
        "NSPhotoLibraryUsageDescription": "Used for selecting profile or chat-related images.",
        "NSUserTrackingUsageDescription": "Tracking Usage: Web viewer is used to present the SWUbot in its iframe, so user can access and chat with it, no other tracking is done in this app."
      }
    },

    "android": {
      "package": "com.standwithus.swubot",
      "versionCode": 9,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": []
    },

    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],

    "extra": {
      "eas": {
        "projectId": "REPLACE_WITH_YOUR_EAS_PROJECT_ID"
      }
    },

    "updates": {
      "fallbackToCacheTimeout": 0
    }
  }
}
